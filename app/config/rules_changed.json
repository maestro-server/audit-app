{
  "applications": {
    "name": [
      {
        "command": "sync",
        "foreign": "servers",
        "field": {
          "query": "applications.$.name",
          "replace": "name"
        },
        "filter": "applications._id"
      },
      {
        "command": "sync",
        "foreign": "applications",
        "field": {
          "query": "deps.$.name",
          "replace": "name"
        },
        "filter": "deps._id"
      },
      {
        "command": "sync",
        "foreign": "systems",
        "field": {
          "query": "entry.$.name",
          "replace": "name"
        },
        "filter": "entry._id"
      }
    ]
  }
}
